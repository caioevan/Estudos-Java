package classe;

public class Data {
	//Dia, mÃªs, ano.
	int dia;
	int mes;
	int ano;
	/*Forma que fiz:
	 * 
	String obterData () {
		return Integer.toString(dia)
				.concat("/")
				.concat(Integer.toString(mes))
				.concat("/")
				.concat(Integer.toString(ano));
	}
	*/
	
	//Forma do professor mais simplificada:
	
	Data () {
		dia = 1;
		mes = 1;
		ano = 1970;
	}
	
	Data (int diaInicial, int mesInicial, int anoInicial) {
		dia = diaInicial;
		mes = mesInicial;
		ano = anoInicial;
	}
	
	String obterData() {
		return String.format("%d/%d/%d", dia, mes, ano);
	}
}
